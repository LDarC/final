  <h1>list</h1>

  <%= link_to "add", new_candidate_path %>

  <table>
    <thead>
      <tr>
        <td>Name</td>
        <td>Introduction</td>
        <td>Author</td>
        <td>Price</td>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.name %>)</td>
        <td><%= book.introduction %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td> <%= link_to "edit", edit_book_path(book) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>